body::before {
  content: "";
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background-color: rgba(0, 0, 0, 0.4); /* ombre légère */
  backdrop-filter: blur(2px); /* flou subtil */
  z-index: -1;
}
